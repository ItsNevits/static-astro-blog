const { title = "Blog" } = Astro.props;
// const { title = "Blog", ...rest } = Astro.props;
// const frontmatter = rest.frontmatter || {};
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ClientRouter />
  </head>
  <body class="bg-gray-900 text-white min-h-screen">
    <a href="/" id="btn-back" class="text-blue-500 px-2 pt-2">Regresar</a>
    <main class="mb-10 max-w-5xl mx-auto px-2 py-2">
      <slot />
    </main>
  </body>
</html>
