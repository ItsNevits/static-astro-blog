---
import { Image } from "astro:assets";
import MainLayout from "src/layouts/MainLayout.astro";

import post05 from "@images/post-05.png";
import { Picture } from "astro:assets";
---

<MainLayout title="Imagenes">
  <h1 class="text-5xl text-white">Imagenes</h1>

  <img
    loading="eager"
    src="/assets/images/post-05.png"
    alt="post-05"
    width="250"
    height="250"
  />

  <Image
    style={{
      width: "250px",
      height: "250px",
    }}
    src={post05}
    alt="post-05"
    width={500}
    height={500}
    loading="lazy"
  />

  <h1 class="text-white mt-10">Quality Low</h1>
  <Image
    quality="low"
    src={post05}
    alt="post-05"
    width={250}
    height={250}
    loading="lazy"
  />

  <h1 class="text-white mt-10">Quality mid</h1>
  <Image
    quality="mid"
    src={post05}
    alt="post-05"
    width={250}
    height={250}
    loading="lazy"
  />

  <h1 class="text-white mt-10">Quality high</h1>
  <Image
    quality="high"
    src={post05}
    alt="post-05"
    width={250}
    height={250}
    loading="lazy"
  />

  <h1 class="text-white mt-10">Quality max</h1>
  <Image
    quality="max"
    src={post05}
    alt="post-05"
    width={250}
    height={250}
    loading="lazy"
  />

  <h1 class="text-white mt-10">Formatos</h1>
  <Image
    format="avif"
    quality="max"
    src={post05}
    alt="post-05"
    width={250}
    height={250}
    loading="lazy"
  />

  <h1 class="text-white mt-10">Picture</h1>
  <!-- formats={["avif", "webp", "png"]}
  widths={[240, 540, 720, post05.width]}
  sizes={`(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px, ${post05.width}px`} -->
  <Picture
    quality="max"
    src={post05}
    alt="post-05"
    width={250}
    height={250}
    loading="lazy"
    width={post05.width / 2}
    densities={[1.5, 2]}
  />

  <div style="height: 3000px;"></div>

  <img
    loading="lazy"
    src="/assets/images/post-05.png"
    alt="post-05"
    width="250"
    height="250"
  />
</MainLayout>
