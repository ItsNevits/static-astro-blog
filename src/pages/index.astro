---
import { getCollection } from "astro:content";
import { SiteConfig } from "../config/site-config";
import MainLayout from "../layouts/MainLayout.astro";
import TypedBlogPost from "src/components/TypedBlogPost.astro";

const blogPosts = await getCollection("blog", (post) => !post.data.isDraft);
---

<MainLayout title="Home">
  <!-- component -->
  <section>
    <div class="container px-6 py-10 mx-auto">
      <h1
        class="text-3xl font-semibold text-gray-800 capitalize lg:text-4xl dark:text-white mb-4"
      >
        {SiteConfig.title}
      </h1>

      <a
        class="text-blue-600 p-2 hover:underline cursor-pointer mr-2"
        href="/blog/1">Blog paginado</a
      >

      <a
        class="text-blue-600 p-2 hover:underline cursor-pointer"
        href="/authors">Autores</a
      >

      <div class="grid grid-cols-1 gap-8 mt-8 md:mt-16 md:grid-cols-2">
        {blogPosts.map((post) => <TypedBlogPost post={post} />)}
      </div>
    </div>
  </section>
</MainLayout>
