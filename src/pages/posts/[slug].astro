---
import { Formatter } from "@utils/formatter";
import type { GetStaticPaths } from "astro";
import { Image } from "astro:assets";
import { getEntry } from "astro:content";
import { getCollection } from "astro:content";
import BlogLayout from "src/layouts/BlogLayout.astro";

export const getStaticPaths = (async () => {
  const blogPosts = await getCollection("blog");

  return blogPosts.map((post) => ({
    params: { slug: post.slug },
    props: { post: post },
  }));
}) satisfies GetStaticPaths;

const { post } = Astro.props;
const frontmatter = post.data;

const { Content, headings } = await post.render();
const author = (await getEntry("author", post.data.author.id)).data;
---

<BlogLayout title={frontmatter.title}>
  <h1 class="text-xs text-gray-500 mb-0">{frontmatter.title}</h1>
  <div class="text-md text-gray-400 mb-0 flex flex-row mt-2">
    <Image
      class="rounded-full inline-block"
      src={author.avatar}
      alt={author.name}
      width="40"
      height="40"
      quality={"max"}
      loading={"lazy"}
      format={"webp"}
      transition:name={`${post.slug}-author-avatar`}
    />
    <div class="flex flex-col ml-5">
      <a href={`/blog/${frontmatter.author.id}`} class="text-blue-400 underline"
        >{author.name}</a
      >
      <span class="text-xs text-gray-200">
        {Formatter.formatDate(frontmatter.date)}
      </span>
    </div>
  </div>

  <!-- Image -->
  <Image
    class="object-cover w-full h-56 rounded-lg my-4"
    src={frontmatter.image}
    alt={frontmatter.title}
    width={800}
    height={600}
    quality={"max"}
    loading={"lazy"}
    format={"webp"}
    transition:name={`${post.slug}-image`}
  />

  <!-- Tabla de contenidos -->
  <h3>Tabla de contenidos</h3>
  <ol class="list-inside my-2">
    {
      headings.map((heading, index) => (
        <li>
          <a href={`#${heading.slug}`} class="text-blue-500 hover:underline">
            {" "}
            {index + 1} - {heading.text}
          </a>
        </li>
      ))
    }
  </ol>

  <!-- Conteindo -->
  <Content />

  <div class="mt-20">
    <a href="#btn-back" class="text-blue-500">Ir arriba</a>
  </div>
</BlogLayout>
